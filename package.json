{
  "name": "npm-upstream-check",
  "version": "0.0.1",
  "packageManager": "pnpm@10.15.0",
  "description": "Check the updates of upstream npm dependencies",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/npm-upstream-check.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.126",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "^18.0.2",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
