{
  "name": "npm-upstream-check",
  "version": "0.0.1",
  "packageManager": "pnpm@9.11.0",
  "description": "Check the updates of upstream npm dependencies",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/npm-upstream-check.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.84",
    "@swc/core": "^1.7.26",
    "@types/node": "^22.5.5",
    "eslint": "^9.10.0",
    "lint-staged": "^15.2.10",
    "npm-check-updates": "^17.1.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
