{
  "name": "npm-upstream-check",
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.4",
  "description": "Check the updates of upstream npm dependencies",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/npm-upstream-check.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.101",
    "@swc/core": "^1.10.9",
    "@types/node": "^22.10.10",
    "eslint": "^9.19.0",
    "lint-staged": "^15.4.2",
    "npm-check-updates": "^17.1.14",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
