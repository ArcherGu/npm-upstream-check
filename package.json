{
  "name": "npm-upstream-check",
  "version": "0.0.1",
  "packageManager": "pnpm@9.5.0",
  "description": "Check the updates of upstream npm dependencies",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/npm-upstream-check.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "^1.0.66",
    "@swc/core": "^1.7.0",
    "@types/node": "^20.14.11",
    "eslint": "^9.7.0",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.1",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
